  <script>
    /* =============================
       CONFIG
    ============================= */
    const DISCORD_USER_ID = "PUT_USER_ID_HERE";

    /* ============================= */

    const statusDot = document.getElementById("status");
    const pfpImg = document.getElementById("pfp");
    const discordLink = document.getElementById("discordLink");

    discordLink.href = `https://discord.com/users/${DISCORD_USER_ID}`;

    const statusColors = {
      online: "var(--online)",
      idle: "var(--idle)",
      dnd: "var(--dnd)",
      offline: "var(--offline)"
    };

    const ws = new WebSocket("wss://api.lanyard.rest/socket");

    ws.onopen = () => {
      ws.send(JSON.stringify({
        op: 2,
        d: { subscribe_to_id: DISCORD_USER_ID }
      }));
    };

    ws.onmessage = (event) => {
      const msg = JSON.parse(event.data);
      if (!msg.d || !msg.d.discord_user) return;

      const user = msg.d.discord_user;
      const status = msg.d.discord_status || "offline";

      statusDot.style.background = statusColors[status];

      if (user.avatar) {
        pfpImg.src = `https://cdn.discordapp.com/avatars/${DISCORD_USER_ID}/${user.avatar}.png?size=256`;
      }
    };
  </script>
